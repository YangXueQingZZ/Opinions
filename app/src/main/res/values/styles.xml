<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashAppTheme" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/layer_splash</item>
    </style>


    <!--更改ToolBar高度-->
    <style name="ToolbarStyle" parent="Base.Widget.AppCompat.ActionBar">
        <item name="android:minHeight">48dp</item>
        <item name="contentInsetStart">0dp</item><!-- 设置该属性边距为0dp-->
        <item name="contentInsetEnd">0dp</item>
    </style>
</resources>
